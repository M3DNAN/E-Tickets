@model IEnumerable<Order>

<h2>Your Order History</h2>
<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Movie</th>
            <th>Tickets</th>
            <th>Date</th>
            <th>Total Price</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.Movie.Name</td>
                <td>@order.NumOfTickets</td>
                <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                <td>@order.TotalPrice.ToString("C")</td>
                <td>@order.Status</td>
            </tr>
        }
    </tbody>
</table>
