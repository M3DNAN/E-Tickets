@{
    ViewBag.Title = "Payment Success";
    var paymentAmount = ViewBag.PaymentAmount; // Ensure this value is passed from the controller
    var transactionId = ViewBag.TransactionId; // Ensure this value is passed from the controller
}

<div class="success-container">
    <h2>Thank You!</h2>
    <p>Your payment was successful.</p>

    <div class="payment-details">
        <p><strong>Amount Paid:</strong> @String.Format("{0:C}", paymentAmount)</p>
        <p><strong>Transaction ID:</strong> @transactionId</p>
    </div>

    <p>We appreciate your purchase. You will receive a confirmation email shortly with your order details.</p>

    <a href="/home/index" class="btn-primary">Go to Home</a>
</div>
<style>
    .success-container {
        max-width: 600px;
        margin: 50px auto;
        padding: 20px;
        text-align: center;
        border: 1px solid #e1e1e1;
        border-radius: 8px;
        background-color: #f9f9f9;
    }

        .success-container h2 {
            color: #4CAF50; /* Green color for success */
            font-size: 32px;
            margin-bottom: 10px;
        }

        .success-container p {
            font-size: 16px;
            color: #333;
            margin: 10px 0;
        }

    .payment-details {
        margin: 20px 0;
    }

        .payment-details p {
            font-size: 18px;
            color: #444;
        }

    .btn-primary {
        display: inline-block;
        padding: 10px 20px;
        margin-top: 20px;
        color: #fff;
        background-color: #4070F4;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #3055c7;
        }
</style>
