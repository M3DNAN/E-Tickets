@model Movie


<div class="container mt-4">
<h1>@Model.Name</h1>

<div class="row">
  
    <div class="col-md-4">
        <img src="~/Images/Posters/@Model.ImgUrl" class="img-fluid" alt="@Model.Name" style="height: 100%; width: auto;" />
    </div>

    
    <div class="col-md-8">
        <div class="ratio ratio-16x9 mb-3">
            <iframe src="https://www.youtube.com/embed/@Model.TrailerUrl" title="@Model.Name Trailer" allowfullscreen></iframe>
        </div>

    
        <p><strong>Description:</strong> @Model.Description</p>
        <p><strong>Genre:</strong> @Model.Category.Name</p>
        <p><strong>Start Date:</strong> @Model.StartDate.ToString("MMMM dd, yyyy")</p>
        <p><strong>End Date:</strong> @Model.EndDate.ToString("MMMM dd, yyyy")</p>
            @if (Model.MovieStatus == MovieStatus.Available || Model.MovieStatus == MovieStatus.Upcoming)
            {
                <strong>Available in:</strong> <a href="/home/CinemaDetails?id=@Model.Cinema.Id" class="card-text"> @Model.Cinema.Name Cinema</a>
            }
     
        <p><strong>Actors:</strong></p>
        <ul>
                @foreach (var actor in Model.ActorMovies)
                {
                    <li>
                        <a href="/home/ActorDetails?id=@actor.Actor.Id">@actor.Actor.FirstName @actor.Actor.LastName</a>
                   </li>
            }
        </ul>
    </div>
</div>
</div>
