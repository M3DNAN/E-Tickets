@model Cinema
<style>
    .img-fluid {
        max-height: 400px;
        object-fit: cover;
    }

    .card {
        height: 100%;
    }
</style>

<div class="container mt-5">
    <div class="row">
        <!-- Cinema Logo and Basic Info -->
        <div class="col-md-4">
            <img src="~/Images/Cinemas/@Model.CinemaLogo" class="img-fluid rounded" alt="@Model.Name" style="width: 400px; height: 400px; object-fit: cover;" />
        </div>

        <!-- Cinema Details -->
        <div class="col-md-8">
            <h1>@Model.Name</h1>
            <p><strong>Description:</strong> @Model.Description</p>
            <p><strong>Address:</strong> @Model.Address</p>
        </div>
    </div>

    <hr />

    <!-- Movies List -->
    <div class="row mt-5">
        <div class="col-12">
            <h3>Movies Showing at @Model.Name</h3>
        </div>

        @if (Model.Movies.Count > 0)
        {
            <div class="row">
                @foreach (var movie in Model.Movies)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card h-100">
                            <img src="~/Images/Posters/@movie.ImgUrl" class="card-img-top img-fluid" alt="@movie.Name">
                            <div class="card-body">
                                <h5 class="card-title">@movie.Name</h5>
                                <p class="card-text">
                                    <strong>Genre:</strong> @movie.Category.Name <br />
                                    <strong>Price:</strong> $@movie.Price
                                </p>
                                <a href="/home/MovieDetails?id=@movie.Id" class="btn btn-outline-primary">More Details</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p>No movies are currently showing at this cinema.</p>
        }
    </div>
</div>
