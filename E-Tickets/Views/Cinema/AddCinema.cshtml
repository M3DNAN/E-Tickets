@model E_Tickets.Models.Cinema

@{
    ViewData["Title"] = "AddCinema";
    Layout = "~/Views/Shared/NavBar.cshtml";
}

<h1>Add Cinema</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddCinema" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>            <br />

            <div class="form-group">
                <label asp-for="CinemaLogo" class="control-label"></label>
                <input asp-for="CinemaLogo" class="form-control" type="file" />
                <span asp-validation-for="CinemaLogo" class="text-danger"></span>

            </div>            <br />

            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>            <br />
